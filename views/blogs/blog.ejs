            <p class="add-product-para"><img class="add-product-icon" src="http://www.ketoanhanoi.vn/wp-content/uploads/2014/12/tay-chi-huong-xanh.png" alt="add-product-icon"/><a class="way-to-product" href="/pivotalflow/addblog">Add your Blog</a>
                <i class="material-icons way-to-product-icon" style="font-size:25px">keyboard_arrow_right</i>
                <i class="material-icons way-to-product-icon" style="font-size:25px">keyboard_arrow_right</i></p>
        </div>
    </div>
</section>
<section class="blogs">
    <div class="container blog-section">
        <div class="row">
                <%blog.forEach(function(newblog){%>
                <div class="col-md-4 col-sm-6">
                    <div class="card-deck">
                        <div class="card blog-card"data-aos="fade-up" data-aos-duration="1000">
                            <img src="<%=newblog.photo%>" class="card-img-top inner-blog--photo" alt="photo">
                            <div class="card-body">
                                <p class="inner-blog--date"><%=newblog.created.toDateString()%></p>
                                <h5 class="card-title text-center title"><%=newblog.title%></h5>
                                <p class="card-text text-center paragraph"><%=newblog.body.substring(0,80)%></p>
                                <div class="card-bottom">
                                    <a href="/pivotalflow/blog/<%=newblog._id%>" class="btn btn-md blog-button">Read More<i class='fas fa-arrow-alt-circle-right blog-arrow'></i></a>
                                    <p class="card-text blog-owner"><%=newblog.author.username%></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%})%>  
        </div>
        <div class="text-center pagination">
        <% if (pages > 0) { %>
            <ul class="pagination text-center">
                <% if (current == 1) { %>
                    <li class="disabled"><a class="pagination-step"><i class="material-icons">keyboard_arrow_left</i>First</a></li>
                <% } else { %>
                    <li><a class="pagination-step" href="/pivotalflow/blogs/1">
                        <i class="material-icons pagination-left--icon">keyboard_arrow_left</i>
                        <i class="material-icons pagination-left--icon">keyboard_arrow_left</i>First</a></li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="disabled"><a class="pagination-step">...</a></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="active"><a class="pagination-step"><%= i %></a></li>
                    <% } else { %>
                        <li><a class="pagination-step" href="/pivotalflow/blogs/<%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if (i == Number(current) + 4 && i < pages) { %>
                        <li class="disabled"><a class="pagination-step">...</a></li>
                    <% } %>
                <% } %>
                <% if (current == pages) { %>
                    <li class="disabled"><a class="pagination-step">Last<i class="material-icons">keyboard_arrow_right</i></a></li>
                <% } else { %>
                    <li><a class="pagination-step" href="/pivotalflow/blogs/<%= pages %>">Last
                        <i class="material-icons pagination-icon">keyboard_arrow_right</i>
                        <i class="material-icons pagination-icon">keyboard_arrow_right</i></a></li>
                <% } %>
            </ul>
        <% } %>
        </div>
        </div>
    </div>
</section>

