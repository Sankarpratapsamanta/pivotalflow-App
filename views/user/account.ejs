<%include ../partial/header%>
<section class="account-page">
    <div class="container account">
        <form action="/signup/<%=user._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4">
                    <img class="account-photo" src="<%=user.photo%>">
                    <p class="text-center account-edit__icon"><i class='fas fa-edit'></i>EDIT</p>
                    <input type="file" class="form-control-file addproduct-input account-edit__file" name="photo" accept="image/*" id="account-edit__photo">
                    <div class="social-icons-2">
                        <span><a href="https://www.facebook.com"><i class='fab fa-facebook-square facebook-1' style='font-size:36px'></i></a></span>
                        <span><a href="https://www.twitter.com"><i class='fab fa-twitter-square twitter-1' style='font-size:36px'></i></a></span>
                        <span><a href="https://www.instagram.com"><i class='fab fa-instagram insta-1' style='font-size:36px'></i></a></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <h1 class="account-heading">PROFILE SETTINGS</h1>
                    <div class="user-information">
                    
                        <label class="account-user" for="username">Name</label>
                        <br>
                        <input class="account-input__user" type="text" id="username" name="username" value="<%=user.username%>">
                        <br>
                        <label class="account-user" for="email">Email</label>
                        <br>
                        <input class="account-input__user" type="text" id="email" name="email" value="<%=user.email%>">
                        <br>
                        <label class="birthday-label account-user">Birthday:</label>
                        <select name="birthday[day]" class="signup-form birthday account-user" required><option value="0">Day</option>,<option value="1">1</option>,<option value="2">2</option>,<option value="3">3</option>,<option value="4">4</option>,<option value="5">5</option>,<option value="6">6</option>,<option value="7">7</option>,<option value="8">8</option>,<option value="9">9</option>,<option value="10">10</option>,<option value="11">11</option>,<option value="12">12</option>,<option value="13">13</option>,<option value="14">14</option>,<option value="15">15</option>,<option value="16">16</option>,<option value="17">17</option>,<option value="18">18</option>,<option value="19">19</option>,<option value="20">20</option>,<option value="21">21</option>,<option value="22">22</option>,<option value="23">23</option>,<option value="24">24</option>,<option value="25">25</option>,<option value="26">26</option>,<option value="27">27</option>,<option value="28">28</option>,<option value="29">29</option>,<option value="30">30</option>,<option value="31">31</option>
                        </select>
                        <select name="birthday[month]" class="signup-form birthday account-user" required><option value="0">Month</option>,<option value="jan">jan</option>,<option value="feb">feb</option>,<option value="mar">mar</option>,<option value="apr">apr</option>,<option value="may">may</option>,<option value="june">june</option>,<option value="july">july</option>,<option value="aug">aug</option>,<option value="sept">sept</option>,<option value="oct">oct</option>,<option value="nov">nov</option>,<option value="dec">dec</option>
                        </select>
                        <select name="birthday[year]" class="signup-form birthday account-user" required><option value="0">Year</option>,<option value="2019">2019</option>,<option value="2018">2018</option>,<option value="2017">2017</option>,<option value="2016">2016</option>,<option value="2015">2015</option>,<option value="2014">2014</option>,<option value="2013">2013</option>,<option value="2012">2012</option>,<option value="2011">2011</option>,<option value="2010">2010</option>,<option value="2009">2009</option>,<option value="2008">2008</option>,<option value="2007">2007</option>,<option value="2006">2006</option>,<option value="2005">2005</option>,<option value="2004">2004</option>,<option value="2003">2003</option>,<option value="2002">2002</option>,<option value="2001">2001</option>,<option value="2000">2000</option>,<option value="1999">1999</option>,<option value="1998">1998</option>,<option value="1997">1997</option>,<option value="1996">1996</option>,<option value="1995">1995</option>,<option value="1994">1994</option>,<option value="1993">1993</option>
                        </select>
                     <button class="btn account-save">SAVE SETTINGS</button>
                    </div>      
                </div>
            </div>
        </form> 

        <div class="account-logo">
            
            <p class="account-company__icon"><img class="company-icon" src="https://dtb5pzswcit1e.cloudfront.net/assets/images/product_logos/icon_pivotalapplicationservice@2x.png" alt="company-logo"></p>
            <span class="account-copyright__tag">Copyright Â©2019  All rights reserved</span>
            <br>
            <span class="account-copyright__tag">made with <i class='fas fa-heart' style='font-size:20px'></i> by Sankar</span>
        </div>
    </div>
</section>


<script type="text/javascript">
    const edit=document.querySelector('.account-edit__icon');
    const file=document.querySelector('.account-edit__file');   
    edit.addEventListener('click',function(){
        file.style.display='block';
    });

</script>

